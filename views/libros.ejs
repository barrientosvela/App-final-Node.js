<%- include("template/cabecera.ejs", {tituloWeb: "Lista de Libros" })%>

    <div class="container">
        <!-- Será el listado de pokemon -->
        <div class="container">
            <h1 class="p-5 text-center">Todos los libros</h1>
            <% //if (usuario.admin == "si") {%>
            <a class="btn btn-success my-4" href="/libros/crear">Crear nuevo libro</a>
            <% //} %>
             
            <a class="btn btn-primary my-4" href="/">Inicio</a>
            <div class="row">
                <% if (arrayLibro.length > 0) { %>
                  <% arrayLibro.forEach(libro => { %>
                    <div class="col-md-4 mb-3">
                      <div class="card">
                        <div class="row g-0">
                          <div class="col-md-4">
                            <img src="../images/neon-pokeball.jpg" class="card-img img-fluid rounded-start" alt="pokeball">
                          </div>
                          <div class="col-md-8">
                            <div class="card-body">
                              <h5 class="card-title"><%= libro.titulo %></h5>
                              <p class="card-text"><%= libro.autor %></p>
                              <p class="card-text"><%= libro.genero %></p>
                              <p class="card-text"><small class="text-muted">Número de páginas: <%= libro.paginas %></small></p>
                            </div>
                          </div>
                        </div>
                      </div>
                    </div>
                  <% }); %>
                <% } %>
              </div>
        </div>
    </div>

    <%- include("template/footer.ejs")%>