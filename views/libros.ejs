<%- include("template/cabecera.ejs", {tituloWeb: "Lista de Libros" })%>

    <div class="container">
        <!-- Será el listado de pokemon -->
        <div class="container">
            <h1 class="p-5 text-center">Todos los libros</h1>
            <% //if (usuario.admin == "si") {%>
            <a class="btn btn-success my-4" href="/libros/crear">Crear nuevo libro</a>
            <% //} %>
             
            <a class="btn btn-primary my-4" href="/">Inicio</a>
            <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">
                <% if (arrayLibro.length> 0) { %>
                    <!--Haremos el foreach para recorrer el array-->
                    <% arrayLibro.forEach(libro=> { %>
                        <div class="col-4 p-3">
                            <div class="card shadow-sm">
                                <img class="bd-placeholder-img card-img-top" src="../images/neon-pokeball.jpg"
                                    alt="pokeball">
                                <div class="card-body">
                                    <h1>
                                        <%= libro.titulo %>
                                    </h1>
                                    <h3>
                                        <%= libro.autor %>
                                    </h3>
                                    <h3>
                                        <%= libro.genero%>
                                    </h3>
                                    <p class="card-text">
                                        Número de páginas:<%= libro.paginas %>
                                    </p>
                                </div>
                            </div>
                        </div>
                        <% }) %>
                            <% } %>
            </div>
        </div>
    </div>

    <%- include("template/footer.ejs")%>