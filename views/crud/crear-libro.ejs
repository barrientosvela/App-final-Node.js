<%- include("../template/cabecera.ejs", {tituloWeb: "Crear libro" })%>
    <div class="mx-auto col-md-4 p-5 shadow rounded mt-4">
        <h1>Crear nuevo Libro</h1>
        <div class="cancelar">
            <a href="/libros" id="img-cancelar"><img id="img-cancelar" src="../images/cerrar.png" alt="cancelar"></a>
        </div>
        <form class="my-2" action="/libros" method="POST">
            <div class="form-group">
                <label for="username">Titulo del libro:</label>
                <input id="nombre" type="text" class="form-control" name="titulo">
            </div>
            <div class="form-group">
                <label for="username">Autor:</label>
                <input type="text" class="form-control" name="autor">
            </div>
            <div class="form-group">
                <label for="username">Genero:</label>
                <input type="text" class="form-control" name="genero">
            </div>
            <div class="form-group">
                <label for="username">Número de páginas:</label>
                <input type="text" class="form-control" name="paginas">
            </div>
            <button type="submit" class="btn"><img id="img-añadir" src="../images/mas.png" alt="añadir"></button>
        </form>
    </div>

    <%- include("../template/footer.ejs")%>